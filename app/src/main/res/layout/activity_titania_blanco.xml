<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitaniaBlancoActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="@string/titania_blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/titania_blanco"
            app:srcCompat="@drawable/titania_blanco" />

        <TableLayout
            android:id="@+id/table_titania_blanco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:shrinkColumns="*">

            <TableRow
                android:layout_width="0dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_titania_blanco_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/icono_vino"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/ic_vino_black_48dp" />

                <TextView
                    android:id="@+id/tv_titania_blanco_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="12dp"
                    android:text="@string/titania_blanco_desc_1"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_titania_blanco_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/icono_vino"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:srcCompat="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tv_titania_blanco_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="12dp"
                    android:text="@string/titania_blanco_desc_2"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>