<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TitaniaRosadoActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="@string/titania_rosado"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/titania_rosado"
            app:srcCompat="@drawable/titania_rosado" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TableLayout
                android:id="@+id/table_titania_rosado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:shrinkColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_1"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/uvas"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_uvas"
                        app:tint="@color/titania_rosado" />

                    <TextView
                        android:id="@+id/tv_titania_rosado_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/icono_estrella"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_star"
                        app:tint="@color/titania_rosado" />

                    <TextView
                        android:id="@+id/tv_titania_rosado_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_2"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/icono_de_frutas"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_fruta"
                        app:tint="@color/titania_rosado"/>

                    <TextView
                        android:id="@+id/tv_titania_rosado_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_3"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/icono_terreno"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_terreno"
                        app:tint="@color/titania_rosado" />

                    <TextView
                        android:id="@+id/tv_titania_rosado_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_4"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/icono_fermentacion"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_fermentacion"
                        app:tint="@color/titania_rosado" />

                    <TextView
                        android:id="@+id/tv_titania_rosado_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_5"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/icon_titania_rosado_6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/icono_termometro"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:srcCompat="@drawable/ic_fermentacion"
                        app:tint="@color/titania_rosado"/>

                    <TextView
                        android:id="@+id/tv_titania_rosado_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:text="@string/titania_rosado_desc_6"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>

        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>