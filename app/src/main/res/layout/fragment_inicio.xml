<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.InicioFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inicio_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/cover_image"
                android:src="@drawable/wines1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_inicio_titania_logo"
                android:contentDescription="@string/titania_logo_text"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="fitCenter"
                android:src="@drawable/titania_logo" />

            <LinearLayout
                android:id="@+id/ll_inicio_tres_vinos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="64dp">

                <ImageButton
                    android:id="@+id/ib_inicio_titania_blanco"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/titania_blanco"
                    android:src="@drawable/titania_blanco" />

                <ImageButton
                    android:id="@+id/ib_inicio_titania_tinto"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:contentDescription="@string/titania_tinto"
                    android:background="#FFFFFF"
                    android:src="@drawable/titania_tinto" />

                <ImageButton
                    android:id="@+id/ib_inicio_titania_rosado"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/titania_rosado"
                    android:scaleType="fitCenter"
                    android:src="@drawable/titania_rosado" />


            </LinearLayout>

            <TextView
                android:id="@+id/textInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>